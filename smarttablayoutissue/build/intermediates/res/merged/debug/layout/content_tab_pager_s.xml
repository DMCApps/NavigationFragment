<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <!--tools:context="com.hkm.smarttablayoutissue.TabPagerS"
    tools:showIn="@layout/activity_tab_pager_s"
    -->


    <android.support.v4.view.ViewPager
        android:id="@id/feature_puzzle_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="@android:color/white"
        android:padding="0dp" />

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@id/feature_puzzle_smarttab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabSelectorHeight"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        app:stl_customTabTextLayoutId="@layout/textview_smarttab_v2"
        app:stl_customTabTextViewId="@id/feature_custom_tab_text"
        app:stl_distributeEvenly="true"
        app:stl_dividerColor="@color/transparent"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorColor="@color/indicator"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorInFront="true"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="3dp"
        app:stl_indicatorWithoutPadding="true"
        app:stl_underlineColor="@color/divider"
        app:stl_underlineThickness="0dp" />

</RelativeLayout>
