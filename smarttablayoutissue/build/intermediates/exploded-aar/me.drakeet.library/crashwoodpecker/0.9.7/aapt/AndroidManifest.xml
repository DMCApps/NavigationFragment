<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.drakeet.library"
    android:versionCode="97"
    android:versionName="0.9.7" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application>
        <activity
            android:name="me.drakeet.library.ui.CatchActivity"
            android:icon="@mipmap/ic_woodpecker"
            android:label="@string/crash_app_name"
            android:taskAffinity="me.drakeet.library"
            android:theme="@style/Theme.Pecker" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>