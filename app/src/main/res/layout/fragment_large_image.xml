<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.dmcapps.navigationfragmentexample.v17.NavigationFragments.LargeImageFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Click the image to perform the Transition" />

    <ImageView
        android:id="@+id/iv_large_image"
        android:transitionName="trans_largeImageView"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:src="@drawable/motorcycle"/>

</RelativeLayout>
