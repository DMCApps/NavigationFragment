<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sample_btn_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Back" />

            <Button
                android:id="@+id/sample_btn_replace_root"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Replace Root" />

            <Button
                android:id="@+id/sample_btn_launch_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Activity" />

            <Button
                android:id="@+id/sample_btn_continue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Continue" />

        </LinearLayout>


        <com.marshalchen.ultimaterecyclerview.UltimateRecyclerView
            android:id="@+id/superlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:recyclerviewClipToPadding="true"
            app:recyclerviewEmptyView="@layout/empty"
            app:recyclerviewScrollbars="vertical" />
    </LinearLayout>

    <com.marshalchen.ultimaterecyclerview.ui.floatingactionbutton.JellyBeanFloatingActionButton
        android:id="@+id/custom_urv_add_floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:icon="@drawable/ic_explore_24dp"
        app:urv_fab_alphaNormal="0.93"
        app:urv_fab_alphaPressed="0.93"
        app:urv_fab_colorNormal="@color/black_yahoo"
        app:urv_fab_colorPressed="@color/colorAccent" />
</RelativeLayout>